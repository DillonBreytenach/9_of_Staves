<MainWidget>:
    cols: 2
    #orientation: 'vertical'
    BoxLayout:
        size_hint: .2, 1
        Button:
            text: "B1"
            size_hint: 1, 1
            pos_hint: {'x': 0, 'y': 0}
    Second_Box:



<Second_Box@ScrollView>:
    BoxLayout:

        height: self.minimum_height
        width: self.minimum_width
        #pos_hint: {'x': None, 'y': 1}
        orientation: 'vertical'

                
        Label:
            id: in_com
            size_hint: 1, 1
            on_text: root.get_text()
            pos_hint: {'x': .1, 'y': 0}
        
        TextInput:
            id: msg
            text:'text'
            multiline: False
            size_hint: 1, .4
            pos_hint: {'x': 0, 'y': .5}
            on_text_validate: root.set_text(self)
        Button:
            text: "SEND_MSG"
            size_hint: 1, .5
            pos_hint: {'x': 0, 'y': 0}
            on_press: root.on_click()
        




